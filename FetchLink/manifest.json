{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A simple Chrome extension",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://localhost:5000/",
    "storage" 
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
